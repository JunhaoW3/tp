@startuml
!include style.puml
skinparam ArrowFontStyle plain

box Logic LOGIC_COLOR_T1
participant ":AddCommandParser" as AddCommandParser LOGIC_COLOR
participant "add:AddCommand" as AddCommand LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant "policy:InsurancePolicy" as InsurancePolicy MODEL_COLOR
participant "toAdd:Person" as Person MODEL_COLOR
end box

AddCommandParser -> AddCommandParser : parse("n/John Doe ... ip/AIB LifePlan")
activate AddCommandParser

AddCommandParser -> InsurancePolicy : new InsurancePolicy("AIB LifePlan")
activate InsurancePolicy
InsurancePolicy --> AddCommandParser : policy
deactivate InsurancePolicy

AddCommandParser -> Person : new Person(name, phone, email, address, tagList,\n reminderList, policy, meetingNotes, isStarred)
activate Person
Person --> AddCommandParser : toAdd
deactivate Person

AddCommandParser -> AddCommand : new AddCommand(toAdd)
activate AddCommand
AddCommand --> AddCommandParser : add
deactivate AddCommand

deactivate AddCommandParser
@enduml
